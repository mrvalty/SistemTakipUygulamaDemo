
@{
    ViewData["Title"] = "MefrusatListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IEnumerable<Mefrusat> mefrusatlar = ViewData["Mefrusatlar"] as IEnumerable<Mefrusat>;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
<form method="get" asp-action="MefrusatListele" asp-controller="Mefrusat" >
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Mefruşat Tanım Listesi</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mefruşat Türü</th>
                        <th>Mefruşat Kodu</th>
                        <th>Oluşturulma Zamanı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in mefrusatlar)
                    {
                        <tr>
                            <td></td>
                            <td>@item.MefrusatTuru</td>
                            <td>@item.MefrusatKodu</td>
                            <td>@item.OlusturmaZamani</td>
                        </tr>

                    }
                </tbody>
               
            </table>
        </div>
        <!-- /.card-body -->
    </div>

    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
</form>



